<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.xu.headline.view.HeadLineVideoPlayer
        android:id="@+id/video_player"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="趣味生活杂谈"
        android:textColor="@color/color_222222"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_player" />

    <ImageView
        android:id="@+id/img_author_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_author_name"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_player"
        app:srcCompat="@mipmap/share_three_point" />

    <TextView
        android:id="@+id/tv_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="123"
        android:textColor="@color/color_222222"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_share"
        app:layout_constraintEnd_toStartOf="@+id/img_share"
        app:layout_constraintTop_toTopOf="@+id/img_share" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_comment_count"
        app:layout_constraintEnd_toStartOf="@+id/tv_comment_count"
        app:layout_constraintTop_toTopOf="@+id/tv_comment_count"
        app:srcCompat="@mipmap/comment_count" />

    <TextView
        android:id="@+id/tv_pay_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/pay_attention_to"
        android:textColor="@color/color_222222"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <ImageView
        android:id="@+id/img_pay_attention"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pay_attention"
        app:layout_constraintEnd_toStartOf="@+id/tv_pay_attention"
        app:layout_constraintTop_toTopOf="@+id/tv_pay_attention"
        app:srcCompat="@mipmap/pay_attention" />
</android.support.constraint.ConstraintLayout>
